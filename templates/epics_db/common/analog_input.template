record(ai,  "$(P):$(R)") {
    field(DTYP, "asynInt32")
    field(DESC, "$(DESC)")
    field(EGU,  "$(EGU)")
    field(PINI, "$(PINI)")
    field(SCAN, "$(SCAN)")
    field(LINR, "$(LINR)")
    field(EGUL, "$(EGUL)")
    field(EGUF, "$(EGUF)")
    field(PREC, "$(PREC)")
    field(INP,  "@asyn($(PORT),0)$(PARAM)")
    field(FLNK, "$(FLNK)")
}

record(ai, "$(P_DEV):$(R_DEV)") {
    field(EGU, "$(EGU)")
    field(SCAN, "$(SCAN)")
    field(INP, "$(P):$(R)")
}